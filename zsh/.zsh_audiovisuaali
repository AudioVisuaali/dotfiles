alias dcup='docker compose up'
alias dcdown='docker compose down'
alias p='pnpm'
alias tsc='npm run typecheck'
alias tscc='npm run typescript-check'

alias vim='nvim'
alias lsl='ls -1A'
alias r='cd && clear'
alias e='exit'
alias ta='tmux attach'
alias c='clear'
alias ts='cd ~/srv/ts-playground && nvim .'
